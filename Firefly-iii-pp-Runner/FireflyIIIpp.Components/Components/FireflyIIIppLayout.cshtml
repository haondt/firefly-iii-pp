@using Haondt.Web.Core.Extensions
@model FireflyIIIpp.Components.Components.FireflyIIIppLayoutModel

<style>
    @@scope {
        .mother-container {
            position: relative;
            flex-grow: 1;
            overflow-y: auto;
        }


        #toast-container, .page-container {
            position: absolute;
            width: 100%;
        }

        #toast-container {
            height: 100%;
            overflow-y: auto;
        }
    }
</style>
<div class="mother-container">
    <div id="toast-container" class="is-flex is-flex-direction-column is-justify-content-flex-end is-align-items-center">
        <style>
            @@scope {
                .toast {
                    opacity: 0;
                    transition: opacity 0.5s ease;
                    z-index: 1000;
                }

                .toast.notification {
                    margin-bottom: 10px;
                }

                .toast.created {
                    opacity 1;
                }
            }
        </style>
    </div>
    <div class="page-container">
        <div class="block">
            <div id="navigation">
                @await Html.PartialAsync(Model.NavigationBar)
            </div>
        </div>
        <div class="container">
            <div id="content">
                @await Html.PartialAsync(Model.Content)
            </div>
        </div>
    </div>
</div>
